<?xml version="1.0" ?>
<sdf version="1.7">
    <model name='generic_robot' canonical_link='chassis'>

        <frame name="lidar_frame" attached_to='chassis'>
            <pose>0.8 0 0.5 0 0 0</pose>
        </frame>
        
        <!--chassis-->
        <link name="chassis">
        <pose>0 0 0 0 0 1.57</pose>
    
        <!-- Visual Geometry -->
        <visual name="act_visual">
            <geometry>
            <mesh>
                <uri>model://mouse_robot/mouse_robot.stl</uri>
                <scale>0.015 0.015 0.015</scale>
            </mesh>
            </geometry>
            <material>
                <ambient>1 1 1 1</ambient>  
                <diffuse>1 1 1 1</diffuse>  
                <specular>0.8 0.8 0.8 1</specular> 
            </material>
        </visual>

        <!-- Collision Geometry -->
        <collision name="chassis_collision">
            <geometry>
            <box>
                <size>0.4 0.2 0.1</size>
            </box>
            </geometry>
        </collision>

        <!-- Inertial Properties -->
        <inertial>
            <mass>1.5</mass>
            <inertia>
            <ixx>0.095</ixx>
            <iyy>0.381</iyy>
            <izz>0.476</izz>
            </inertia>
        </inertial>

        <!-- LiDAR Sensor -->
        <sensor type="ray" name="lidar_sensor">
            <pose>0 0 0.3 0 0 0</pose>
            <topic>lidar</topic>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>640</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.396263</min_angle>
                        <max_angle>1.396263</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>20</samples> <!-- Number of vertical beams -->
                        <resolution>1</resolution>
                        <min_angle>0</min_angle> <!-- Horizontal direction -->
                        <max_angle>1.5708</max_angle> <!-- 90Â° upward -->
                    </vertical>
                </scan>
                <range>
                    <min>0.08</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
                <topic_name>lidar</topic_name>
                <output_type>sensor_msgs/LaserScan</output_type>
                <min_angle>-1.57</min_angle>  <!-- 90 degrees left -->
                <max_angle>1.57</max_angle>   <!-- 90 degrees right -->
                <update_rate>30.0</update_rate>
                <ray_count>360</ray_count>    <!-- Resolution -->
                <range_min>0.1</range_min>
                <range_max>10.0</range_max>
            </plugin>
        </sensor>
        </link>

        <!-- Left wheel-->
        <link name='left_wheel'>
            <pose relative_to="chassis">0.09 0.19 0 -1.5707 0 1.57</pose> 
            <inertial>
                <mass>1</mass>
                <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                </inertia>
            </inertial>
            <visual name='left_wheel_visual'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.03</length>
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0 0 0 1</ambient> 
                    <diffuse>0 0 0 1</diffuse>  
                    <specular>0.1 0.1 0.1 1</specular>
                </material>
            </visual>
            <collision name='left_wheel_collision'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.03</length>
                    </cylinder>
                </geometry>
            </collision>
        </link>

        <!--The same as left wheel but with different position-->
        <link name='right_wheel'>
            <pose relative_to="chassis">-0.09 0.19 0 -1.5707 0 1.57</pose> 
            <inertial>
                <mass>1</mass>
                <inertia>
                    <ixx>0.043333</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.043333</iyy>
                    <iyz>0</iyz>
                    <izz>0.08</izz>
                </inertia>
            </inertial>
            <visual name='right_wheel_visual'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.03</length>    
                    </cylinder>
                </geometry>
                <material>
                    <ambient>0 0 0 1</ambient> 
                    <diffuse>0 0 0 1</diffuse>  
                    <specular>0.1 0.1 0.1 1</specular>
                </material>
            </visual>
            <collision name='right_wheel_collision'>
                <geometry>
                    <cylinder>
                        <radius>0.1</radius>
                        <length>0.03</length>
                    </cylinder>
                </geometry>
            </collision>
        </link>

        <frame name="caster_frame" attached_to='chassis'>
            <pose relative_to="chassis">0 0.02 -0.03 0 0 0</pose>
        </frame>

        <link name='caster'>
            <pose relative_to='caster_frame'>0 0 0 0 0 0</pose>
            <inertial>
                <mass>1</mass>
                <inertia>
                    <ixx>0.016</ixx>
                    <ixy>0</ixy>
                    <ixz>0</ixz>
                    <iyy>0.016</iyy>
                    <iyz>0</iyz>
                    <izz>0.016</izz>
                </inertia>
            </inertial>
            <visual name='caster_visual'>
                <geometry>
                    <sphere>
                        <radius>0.04</radius>
                    </sphere>
                </geometry>
                <material>
                    <ambient>0 0 0 1</ambient> 
                    <diffuse>0 0 0 1</diffuse>  
                    <specular>0.1 0.1 0.1 1</specular>
                </material>
            </visual>
            <collision name='caster_collision'>
                <geometry>
                    <sphere>
                        <radius>0.04</radius>
                    </sphere>
                </geometry>
            </collision>
        </link>


        <!--left wheel joint-->
        <joint name='left_wheel_joint' type='revolute'>
            <pose relative_to='left_wheel'/>
            <parent>chassis</parent>
            <child>left_wheel</child>
            <axis>
                <xyz expressed_in='__model__'>0 1 0</xyz> <!--can be descired to any frame or even arbitrary frames-->
                <limit>
                    <lower>-1.79769e+308</lower>    <!--negative infinity-->
                    <upper>1.79769e+308</upper>     <!--positive infinity-->
                </limit>
            </axis>
        </joint>

        <!--right wheel joint-->
        <joint name='right_wheel_joint' type='revolute'>
            <pose relative_to='right_wheel'/>
            <parent>chassis</parent>
            <child>right_wheel</child>
            <axis>
                <xyz expressed_in='__model__'>0 1 0</xyz>
                <limit>
                    <lower>-1.79769e+308</lower>    <!--negative infinity-->
                    <upper>1.79769e+308</upper>     <!--positive infinity-->
                </limit>
            </axis>
        </joint>

        <!--caster wheel joint--> <!--pose defult value is the child-->
        <joint name='caster_wheel' type='ball'>
            <parent>chassis</parent>
            <child>caster</child>
        </joint>

        <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>
            <wheel_separation>0.19</wheel_separation>
            <wheel_radius>0.05</wheel_radius>
            <wheel_diameter>0.1</wheel_diameter>
            <odom_publish_frequency>10</odom_publish_frequency>
            <topic>cmd_vel</topic>
        </plugin>
    </model>
</sdf>